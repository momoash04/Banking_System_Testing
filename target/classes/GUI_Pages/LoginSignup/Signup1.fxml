<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="def_pkg.Controllers.LoginCon.Signup1Controller">
    <children>
        <StackPane prefHeight="600.0" prefWidth="800.0">
            <children>
                <!-- Background with gradient -->
                <Pane style="-fx-background-color: linear-gradient(to bottom right, white, #002266);">
                    <children>
                        <!-- Back Button -->
                        <Button fx:id="backButton" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #0077b6;" text="← Back">
                            <font>
                                <Font name="Segoe UI" size="16.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        <!-- Signup Panel -->
                        <Pane fx:id="signupPanel" layoutX="200.0" layoutY="100.0" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 50;">
                            <children>
                                <Label layoutX="49.0" layoutY="31.0" text="Verify Your Account" textFill="#212529">
                                    <font>
                                        <Font name="Segoe UI Bold" size="32.0" />
                                    </font>
                                </Label>

                                <Label layoutX="50.0" layoutY="100.0" text="Account Number" textFill="#212529">
                                    <font>
                                        <Font name="Century Gothic" size="16.0" />
                                    </font>
                                </Label>

                                <TextField fx:id="accountNumberField" layoutX="50.0" layoutY="130.0" prefHeight="40.0" prefWidth="300.0" promptText="Enter your account no." style="-fx-border-color: #c8c8c8; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5 10 5 10;">
                                    <font>
                                        <Font name="Segoe UI" size="16.0" />
                                    </font>
                                </TextField>

                                <Label layoutX="50.0" layoutY="190.0" text="CNIC" textFill="#212529">
                                    <font>
                                        <Font name="Century Gothic" size="16.0" />
                                    </font>
                                </Label>

                                <TextField fx:id="cnicField" layoutX="50.0" layoutY="220.0" prefHeight="40.0" prefWidth="300.0" promptText="Enter your CNIC" style="-fx-border-color: #c8c8c8; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5 10 5 10;">
                                    <font>
                                        <Font name="Segoe UI" size="16.0" />
                                    </font>
                                </TextField>

                                <Button fx:id="verifyButton" layoutX="50.0" layoutY="308.0" mnemonicParsing="false" onAction="#handleVerify" prefHeight="45.0" prefWidth="300.0" style="-fx-background-color: #0077b6; -fx-text-fill: white; -fx-background-radius: 5;" text="VERIFY">
                                    <font>
                                        <Font name="Segoe UI Bold" size="16.0" />
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                        <Label fx:id="errorLabel" alignment="CENTER" layoutX="50.0" layoutY="274.0" prefHeight="17.0" prefWidth="300.0" text="error label" visible="false">
                           <font>
                              <Font name="Century Gothic Bold" size="12.0" />
                           </font></Label>
                            </children>
                        </Pane>
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
