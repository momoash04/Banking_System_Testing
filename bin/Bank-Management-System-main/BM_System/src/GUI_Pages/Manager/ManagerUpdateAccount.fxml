                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <!-- Message Section -->
        <Label fx:id="messageLabel" alignment="CENTER" layoutX="267.0" layoutY="161.0" prefHeight="25.0" prefWidth="514.0" style="-fx-text-fill: red; -fx-font-size: 16;">
         <font>
            <Font name="Century Gothic" size="18.0" />
