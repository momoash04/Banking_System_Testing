            <Label text="DOB:" GridPane.rowIndex="6">
            <font>
               <Font name="Century Gothic" size="18.0" />
            </font></Label>
            <TextField fx:id="dobField" editable="false" style="-fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <font>
               <Font name="Century Gothic Bold Italic" size="18.0" />
            </font></TextField>

            <Label text="Phone:" GridPane.rowIndex="7">
            <font>
